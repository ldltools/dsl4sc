digraph flow {
  rankdir=LR
  node				[shape=box]

// --------------------------------------------------------------------------------
// file nodes
// --------------------------------------------------------------------------------
  rules				[label=<<I>S</I>.rules>]

  {rank=same
   spec				[label=<<I>S</I>.spec>]
   rules_xml			[label=<<I>S</I>.xml>]
  }

  ldl				[label=<<I>S</I>.ldl>]

  {rank=same
   mso				[label=<<I>S</I>.mso>]
  }

  {rank=same
   rankdir=TB
