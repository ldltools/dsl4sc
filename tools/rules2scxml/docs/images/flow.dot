  dfa -> dfadot			[label="dfa2dot.sh"]

//
  rules -> scxml		[label="rules2scxml.sh", style=dotted]
  rules -> dfa2			[label="rules2dfa.sh", style=dotted]
  dfa2 -> scxml			[label="dfa2scxml.sh", style=dotted]

