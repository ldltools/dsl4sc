protocol
 (ping; pong)*;;
 // pairs of _ping_ and _pong_ events (repeated 0 or more times)

rule

on ping
raise pong
  // Each incoming _ping_ event is responded with _pong_
{
  console.log ("ping", _event.data);
  // Note: The above "raise pong" action in _dsl4sc_ needs to be _refined/implemented_ within the "{...}" block using SCXML.raise
  SCXML.raise ({"event" : {"name" : "pong", "data" : _event.data}});
};

on pong do { console.log ("pong", _event.data); };
